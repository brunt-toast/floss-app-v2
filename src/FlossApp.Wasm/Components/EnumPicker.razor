@using FlossApp.Wasm.Extensions.System
@typeparam T

<MudSelect T="T" @bind-Value="Value" Label="@Label">
    @foreach (var val in Enum.GetValues<T>().Where(Filter))
    {
        <MudSelectItem T="T" Value="val">
            @val.ToDisplayName()<br />
            <span class="text-secondary" style="font-size: .75em;">@val.GetDescription()</span>
        </MudSelectItem>
    }
</MudSelect>
