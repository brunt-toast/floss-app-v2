@using FlossApp.Application.Data
@using FlossApp.Application.Enums
@using FlossApp.Application.Services.ColorProvider

<MudAutocomplete T="RichColor" Label="@Label" @bind-Value="Value" 
SearchFunc="@RichColorSearch" ToStringFunc="RichColorToString">
    <ItemTemplate Context="e">                          
        <MudText>
            <MudIcon Icon="@Icons.Material.Filled.Circle" Style="@($"color: #{e.AsHex()};")" Class="mb-n1 mr-3"/>@e.Number @e.Name
        </MudText>
    </ItemTemplate>
    <ItemSelectedTemplate Context="e">                
        <MudText>
            <MudIcon Icon="@Icons.Material.Filled.Circle" Style="@($"color: #{e.AsHex()};")" Class="mb-n1 mr-3"/>@e.Number @e.Name
        </MudText>
    </ItemSelectedTemplate>
</MudAutocomplete>
