@using FlossApp.Application.Models.RichColor
@using FlossApp.Application.ViewModels.Pickers
@inject ICieLabPickerViewModel ViewModel

<div class="container">
    <div class="row">
        <div class="col col-auto">
            <MudNumericField Label="L" T="double" Min="0" Max="100" @bind-Value="ViewModel.L" />
        </div>
        <div class="col">
            <MudSlider T="double" Min="0" Max="100" Step="1" @bind-Value="ViewModel.L" />
        </div>
    </div>
    <div class="row">
        <div class="col col-auto">
            <MudNumericField Label="a" T="double" Min="-128" Max="127" @bind-Value="ViewModel.A" />
        </div>
        <div class="col">
            <MudSlider T="double" Min="-128" Max="127" Step="0.01" @bind-Value="ViewModel.A" />
        </div>
    </div>
    <div class="row">
        <div class="col col-auto">
            <MudNumericField Label="b" T="double" Min="-128" Max="127" @bind-Value="ViewModel.B" />
        </div>
        <div class="col">
            <MudSlider T="double" Min="-128" Max="127" Step="0.01" @bind-Value="ViewModel.B" />
        </div>
    </div>
    <div class="row">
        <div class="my-1 rounded" style="width: 100%; height: 2em; border: 1px solid gray; background-color: #@(ViewModel.RichColor.AsHex());">
        </div>
    </div>
</div>
